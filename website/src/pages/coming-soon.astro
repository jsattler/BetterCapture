---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
	title="Coming Soon | BetterCapture"
	description="This page is coming soon. Stay tuned for updates from BetterCapture."
	canonicalUrl="https://jsattler.github.io/BetterCapture/coming-soon/"
	robots="noindex, follow"
>
	<main class="min-h-screen flex items-center justify-center py-20 px-6">
		<div class="max-w-4xl mx-auto w-full">
			<div class="bg-gray-900 rounded-3xl overflow-hidden">
				<div class="relative h-80 md:h-96 overflow-hidden rounded-3xl m-3">
					<img
						src={`${import.meta.env.BASE_URL}grainy-gradient.jpg`}
						alt=""
						class="w-full h-full object-cover"
					/>
					<div class="absolute inset-0 bg-black/40"></div>
					<div class="absolute inset-0 flex items-center justify-center">
						<div class="p-16 md:p-24 text-center">
							<p class="text-gray-100 text-sm uppercase tracking-wider mb-6">
								We're Working on Something Great
							</p>
							<h1 class="text-4xl md:text-6xl font-bold text-white mb-8">
								Coming Soon...
							</h1>
							<p class="text-gray-100 text-lg mb-8 max-w-2xl mx-auto">
								Check back later for updates!
							</p>
							<a 
								href={import.meta.env.BASE_URL}
								class="inline-flex items-center gap-2 px-6 py-3 bg-white text-gray-900 font-semibold rounded-xl hover:bg-gray-100 transition-colors"
							>
								<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
								</svg>
								Back to Home
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>
</BaseLayout>
